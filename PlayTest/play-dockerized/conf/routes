# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /home                       controllers.HomeController.home
GET     /createBoard                controllers.ApplicationController.createBoard
GET     /showBoards                 controllers.ApplicationController.showBoards
GET     /uploadPin                  controllers.ApplicationController.uploadPin

GET     /login                      controllers.LoginController.login
POST    /addUser                    controllers.LoginController.addUser


GET     /users/add                  controllers.HomeController.create(username: String, password: String)

GET     /users                      controllers.HomeController.findByUsername(username: String)

POST    /upload                     controllers.ImageController.upload()

GET     /upload                     controllers.ImageController.image_form()
